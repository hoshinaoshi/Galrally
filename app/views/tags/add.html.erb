<%= form_tag("/tags") do |f| %>
  <% @tags.each do |tag| %>
    <%= submit_tag tag.tag %>
  <% end %><br/>
  <% @shows.each_with_index do |show, i| %>
    <%= check_box_tag "check[#{show.id}]", 0,1,{:style => "display:none"} %>
    <div style="float:left;margin:5px;" id="<%= show.id %>" class="review_thumb">
      <% case show.site%>
      <% when XVIDEOS %>
        <% (1..20).each do |i| %>
          <%= image_tag("#{show.thumbnail_url.gsub(/\.[\d]*\.jpg$/, "")}.#{i}.jpg", :size => "180x135", :style => (i == 1 ? "" : "display:none")) %>
        <% end %>
      <% when SPANKWIRE %>
        <% (1..10).each do |i| %>
          <%= image_tag("#{show.thumbnail_url.gsub(/\/[\d]*\.jpg$/, "")}/#{i}.jpg", :size => "180x135", :style => (i == 1 ? "" : "display:none")) %>
        <% end %>
      <% when TUBE8 %>
        <% (1..16).each do |i| %>
          <%= image_tag("#{show.thumbnail_url.gsub(/\/[\d]*\.jpg$/, "")}/#{i}.jpg", :size => "180x135", :style => (i == 1 ? "" : "display:none")) %>
        <% end %>
      <% when TOKYOTUBE %>
        <% (1..10).each do |i| %>
          <%= image_tag("#{show.thumbnail_url.gsub(/\/[\d]*\.jpg$/, "")}/#{i}.jpg", :size => "180x135", :style => (i == 1 ? "" : "display:none")) %>
        <% end %>
      <% when ASG %>
        <% (0..25).each do |i| %>
          <%= image_tag("#{show.thumbnail_url}#{i}", :size => "180x135", :style => (i == 1 ? "" : "display:none")) %>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
